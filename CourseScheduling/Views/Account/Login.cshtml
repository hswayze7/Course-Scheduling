@model CourseScheduling.Models.StudentLoginViewModel


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Create a centered form with Bootstrap's grid and spacing utilities -->
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <h2 class="text-center mb-4">Student Login</h2>

            <form method="post" asp-action="Login" class="p-4 border rounded bg-light">
                <div class="form-group mb-3">
                    <label for="StudentId" class="form-label" style="font-size: 1.2rem;">Student ID</label>
                    <input type="text" class="form-control form-control-lg" id="StudentId" name="StudentId" required />
                </div>
                <div class="form-group mb-3">
                    <label for="Password" class="form-label" style="font-size: 1.2rem;">Password</label>
                    <input type="password" class="form-control form-control-lg" id="Password" name="Password" required />
                </div>
                <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
            </form>
        </div>
    </div>
</div>

