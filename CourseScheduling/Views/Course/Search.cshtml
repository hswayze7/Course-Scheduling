@model SearchViewModel
@using CourseScheduling.ViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
    <div class="container mt-5">
       <form>
        <a href="/Course/ListCourses" class="btn btn-primary ml-2">Continue to Courses</a>


        </form>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (Model.Results != null && Model.Results.Any())
        {
            <h3 class="mt-4">Search Results</h3>
            <table class="table table-bordered table-striped mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Course ID</th>
                        <th>Course Name</th>
                        <th>Description</th>
                        <th>Credits</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model.Results)
                    {
                        <tr>
                            <td>@course.CourseCode</td>
                            <td>@course.CourseName</td>
                            <td>@course.Description</td>
                            <td>@course.Credits</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else if (Model.Results != null)
        {
            <p class="text-muted mt-4">Under Remodeling</p>
        }
    </div>


