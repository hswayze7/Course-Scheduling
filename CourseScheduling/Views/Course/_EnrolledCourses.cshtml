@model IEnumerable<CourseScheduling.Models.Enrollment>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover table-striped mt-3">
        <thead class="thead-light">
            <tr>
                <th>Course Code</th>
                <th>Course Name</th>
                <th>Credits</th>
                <th>Time</th>
                <th>Professor</th>
                <th>Enrollment Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model)
            {
                <tr id="enrolledRow-@enrollment.EnrollmentId">
                    <td>@enrollment.Course.CourseCode</td>
                    <td>@enrollment.Course.CourseName</td>
                    <td>@enrollment.Course.Credits</td>
                    <td>@enrollment.Course.Time</td>
                    <td>@enrollment.Course.Professor</td>
                    <td>@enrollment.EnrollmentDate.ToShortDateString()</td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" onclick="deleteEnrollment(event, @enrollment.EnrollmentId)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You are not enrolled in any courses yet.</p>
}
