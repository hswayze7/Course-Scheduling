        padding: 0 2%;
    }

    .row > .col-md-6 {
        padding: 0;
        max-width: 100%;
    }

    #enrolledCourses .table-responsive {
        overflow: visible;
    }

    #calendar {
        width: 100%;
        min-height: 700px;
    }
</style>
